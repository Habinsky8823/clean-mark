#!/usr/bin/env node

const fs = require('fs')
const url = require('url')
const c = require('../')
const s = require('../lib/stats')
const { urlPath } = require('../lib/util')

let link = process.argv[2]

if (!link) {
  console.warn(':<  Plz gimme URL')
  process.exit()
}

console.log('☟  watch dis ...')
c(link, true).then(dict => {
  const stat = `paragraph=${s.paragraphCount(dict.text)} sentences=${s.sentenceCount(dict.text)}, words=${s.wordCount(dict.text)}`
  const text = `---\ntitle: ${dict.title}\nauthor: ${dict.author}\ndate: ${dict.date}\npublisher: ${dict.publisher}\nlink: ${dict.url}\nstats: ${stat}\n---\n${dict.text}`
  const path = urlPath(link) + '.md'
  console.log('>', path)
  fs.writeFileSync(path, text)
  console.log('☞  baaam!')
}).catch(err => console.error(err))
